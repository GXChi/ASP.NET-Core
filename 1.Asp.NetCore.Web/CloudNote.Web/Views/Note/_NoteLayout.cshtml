@{
    Layout = "_Layout";
}
<style>
    .left-fropdown-menu {
        display: inherit;
        position: inherit;
        background-color: #f5f5f5;
        border-radius: 0px;
        /*   border-right: 1px solid #e0e1e5;*/
        margin: auto;
        min-height: 500px;
        /*text-align:center;*/
    }

        .left-fropdown-menu i {
            margin-left: 15px;
        }

    /*    .leftMenu {
        background-color: #f5f5f5;
        border-radius: 0px;
        border-right: 1px solid #e0e1e5;
    }*/
</style>
<script type="text/javascript">
    $(function () {
        var clientHeight = document.documentElement.clientHeight;
        console.log(clientHeight);
        $(".left-fropdown-menu").css("height", clientHeight)
    });


</script>
<div class="leftMenu">
    <div class="dropdown-menu left-fropdown-menu" style="width:210px;">
        <a class="dropdown-item"><i class="bi bi-plus"></i>新建文档</a>
        <div class="dropdown-divider"></div>
        <a class="dropdown-item @(ViewBag.Title == "我的文档" ? "active" : string.Empty)" asp-controller="Note" asp-action="Index"><i class="bi bi-file-text"></i>最新文档</a>
        <a class="dropdown-item" href="#"><i class="bi bi-share"></i>与我分享</a>

        <a class="dropdown-item" href="#"><i class="bi bi-folder"></i>我的文件夹</a>
        <a class="dropdown-item" href="#"><i class="bi bi-star"></i>加星文件</a>
        <a class="dropdown-item" href="#"><i class="bi bi-trash"></i>回收站</a>
    </div>
</div>

<div class="content" style="float:right">
    @RenderBody()
</div>

@RenderSection("Scripts", required: false)

