@{
    ViewData["Title"] = "Home Page";
}
<script src="~/video.js/video.js"></script>
<script src="~/videojs-contrib-hls/videojs-contrib-hls.js"></script>
<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<video id="my-video"
       class="video-js vjs-default-skin"
       controls
       preload="auto"
       style="width:500px">
    <source src="http://ivi.bupt.edu.cn/hls/cctv1hd.m3u8" type="application/x-mpegURL" />
</video>
<button @@click="checkVideo()">点击切换到CCTV3</button>
<script>
    methods: {
        getVideo() {
            videojs(
                "my-video",
                {
                    bigPlayButton: false,
                    textTrackDisplay: false,
                    posterImage: true,
                    errorDisplay: false,
                    controlBar: true
                },
                function () {
                    this.play();
                }
            );
        }
    }

   function mounted() {
        this.getVideo();
    },

    function checkVideo() {
        var myPlayer = videojs("my-video");
        myPlayer.src([
            {
                type: "application/x-mpegURL",
                src: "http://ivi.bupt.edu.cn/hls/cctv3hd.m3u8" //CCTV3频道
            }
        ]);
        myPlayer.play();
    }

</script>
